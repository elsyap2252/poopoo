<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">
        <!-- Judul -->
        <TextView
            android:id="@+id/titleText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Add Poop"
            android:textSize="24sp"
            android:textStyle="bold"
            android:gravity="center"

            android:padding="12dp"
            android:textColor="#000000" />
        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#000000" />

        <!-- Barisan tanggal -->
        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp">

            <LinearLayout
                android:id="@+id/dateContainer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <!-- Tambahkan Button atau TextView programmatically -->
            </LinearLayout>
        </HorizontalScrollView>

        <!-- Hari -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Date"
            android:textStyle="bold"
            android:textSize="18dp"
            android:layout_marginTop="16dp" />

        <LinearLayout
            android:id="@+id/datePickerLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_marginTop="8dp"
            android:clickable="true"
            android:focusable="true">

            <TextView
                android:id="@+id/dayText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="01"
                android:textSize="20sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" / "
                android:textSize="20sp" />

            <TextView
                android:id="@+id/monthText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="04"
                android:textSize="20sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" / "
                android:textSize="20sp" />

            <TextView
                android:id="@+id/yearText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2025"
                android:textSize="20sp" />
        </LinearLayout>


        <!-- Waktu -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Time"
            android:textStyle="bold"
            android:textSize="18dp"
            android:layout_marginTop="16dp"
            />

        <LinearLayout
            android:id="@+id/timePickerLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_marginTop="8dp"
            android:clickable="true"
            android:focusable="true">

            <TextView
                android:id="@+id/hourText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="09"
                android:textSize="20sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" : "
                android:textSize="20sp" />

            <TextView
                android:id="@+id/minuteText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="09"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/ampmText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="AM"
                android:layout_marginStart="8dp"
                android:textSize="20sp" />
        </LinearLayout>

        <!-- Detail Poop -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18dp"
            android:text="POO DETAILS"
            android:textStyle="bold"
            android:layout_marginTop="16dp" />

        <!-- Shape -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Shape"
            android:layout_marginTop="12dp"
            android:textSize="16dp"
            android:textStyle="bold" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="left"
            android:layout_marginTop="8dp">
            <!-- Contoh ImageView bentuk (di dalam lingkaran) -->
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/poopshape1"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_margin="8dp"
                android:src="@drawable/shape1"
                android:background="#FFFFFF"
                android:elevation="2dp" />
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/poopshape2"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_margin="8dp"
                android:src="@drawable/shape2"
                android:background="#FFFFFF"
                android:elevation="2dp" />
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/poopshape3"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_margin="8dp"
                android:src="@drawable/shape3"
                android:background="#FFFFFF"
                android:elevation="2dp" />
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/poopshape4"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_margin="8dp"
                android:src="@drawable/shape4"
                android:background="#FFFFFF"
                android:elevation="2dp" />
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/poopshape5"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_margin="8dp"
                android:src="@drawable/shape5"
                android:background="#FFFFFF"
                android:elevation="2dp" />
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/poopshape6"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_margin="8dp"
                android:src="@drawable/shape6"
                android:background="#FFFFFF"
                android:elevation="2dp" />

            <!-- Tambahkan ImageView lain untuk shape2, shape3, dll -->
        </LinearLayout>

        <!-- Color -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Color"
            android:layout_marginTop="12dp"
            android:textSize="16dp"
            android:textStyle="bold" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="left"
            android:layout_marginTop="8dp">
            <!-- Contoh lingkaran warna -->
            <View
                android:id="@+id/colorYellow"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_margin="4dp"
                android:background="@drawable/color_circle_yellow" />
            <View
                android:id="@+id/colorBrown"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_margin="4dp"
                android:background="@drawable/color_circle_brown" />
            <View
                android:id="@+id/colorRed"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_margin="4dp"
                android:background="@drawable/color_circle_red" />
            <View
                android:id="@+id/colorBlack"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_margin="4dp"
                android:background="@drawable/color_circle_black" />
            <View
                android:id="@+id/colorGreen"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_margin="4dp"
                android:background="@drawable/color_circle_green" />
            <!-- Tambahkan lingkaran warna lainnya -->
        </LinearLayout>

        <!-- Size -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Size"
            android:layout_marginTop="12dp"
            android:textSize="16dp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="left">

            <!-- Contoh ukuran (kotak gradasi ukuran) -->
            <View
                android:id="@+id/size1"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_margin="4dp"
                android:background="#CCCCCC" />
            <View
                android:id="@+id/size2"
                android:layout_width="23dp"
                android:layout_height="23dp"
                android:layout_margin="4dp"
                android:background="#CCCCCC" />
            <View
                android:id="@+id/size3"
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:layout_margin="4dp"
                android:background="#CCCCCC" />
            <View
                android:id="@+id/size4"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:layout_margin="4dp"
                android:background="#CCCCCC" />
            <View
                android:id="@+id/size5"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_margin="4dp"
                android:background="#CCCCCC" />
            <!-- Tambahkan view lain dengan ukuran berbeda -->
        </LinearLayout>

        <!-- Notes -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Notes"
            android:layout_marginTop="12dp"
            android:textStyle="bold" />

        <!-- Tombol Simpan -->
        <EditText
            android:id="@+id/notesEditText"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:background="#DDD"
            android:gravity="top"
            android:inputType="textMultiLine"
            android:padding="8dp" />

        <Button
            android:id="@+id/btnSavePoo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="SAVE POO"
            android:textColor="@color/white"
            android:layout_marginTop="50dp"/>


    </LinearLayout>
</ScrollView>
